<% include ./partials/header %>
<div style = "margin-top:150px">
    <div class= "ui main text container segment">
    <div class= "ui huge header"><h1>Edit Blog Post</h1></div>
    <form class = "ui form" action="/blog/<%=id._id%>?_method=put" method="post">
        <div class = "field">
            <label>Title</label>
            <input type="text" name= "blog[title]" value = "<%=id.title%>">
        </div>
         <div class = "field">
            <label>Image</label>
            <input type = "text" name = "blog[image]" value = <%= id.image%>>
        </div>
         <div class = "field">
            <label>Discription</label>
            <textarea name = "blog[discription]"><%= id.discription%></textarea>
        </div>
         <div class = "field">
            <button class = "ui secondary button">Submit</button>
        </div>
    </form>
    
</div>
</div>





<% include ./partials/footer %>
